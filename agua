    // Função para reatribuir eventos do perfil após trocar o conteúdo
    function attachProfileEvents() {
        // Modo escuro (reatualiza as cores se já estiver ativado)
        if (darkMode) {
            document.querySelectorAll('.profile, .community, .scraps').forEach(e => e && (e.style.background = '#2d2d2d', e.style.color = '#fff'));
