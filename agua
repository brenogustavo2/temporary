                if(e) {
                    e.style.color = '#111';
                    e.style.fontWeight = 'bold';
                }
            });
        }
        // Seguidores
        const followersBtn = document.getElementById('followers');
        if (followersBtn) {
            followersBtn.onclick = function() {
                alert('Seguido por: Ana, João, Maria, Lucas, Beatriz, Rafael, Gabriela, Pedro, Julia, Felipe, Marina, Otávio, Larissa, Paulo, Juliette, Elon Musk, Beyoncé, Paulo Vieira, Neymar, Anitta');
            };
        }
        // Editar capa
        const editCoverBtn = document.getElementById('edit-cover');
        if (editCoverBtn) {
            editCoverBtn.onclick = function() {
                const url = prompt('Cole a URL da nova imagem de capa:');
                if(url) editCoverBtn.parentElement.style.background = `#ffeaea url('${url}') center/cover no-repeat`;
            };
        }
        // Publicar posts
        const postForm = document.getElementById('post-form');
        const postContent = document.getElementById('post-content');
        const feed = document.getElementById('feed');
        if (postForm && postContent && feed) {
            postForm.onsubmit = function(e) {
                e.preventDefault();
                if(postContent.value.trim().length === 0) return;
                const post = document.createElement('div');
                post.className = 'scrap';
                post.innerHTML = `
                    <div style='display:flex;align-items:center;gap:0.5rem;'>
                        <img src="https://kevinreillycollection.com/wp-content/uploads/2015/08/profile-icon.png" style="width:32px;height:32px;border-radius:50%;border:2px solid #b71c1c;">
                        <strong>Seu Nome</strong>
                        <span style="color:#2196f3;font-size:1.1em;">✔️</span>
                        <span style="margin-left:auto;cursor:pointer;color:#b71c1c;font-size:1.2em;" class="delete-post">🗑️</span>
                    </div>
                    <div style='margin:0.7rem 0;'>${postContent.value.replace(/</g,'&lt;')}</div>
                    <div style='display:flex;gap:1.2rem;font-size:1.1em;'>
                        <span class="like-btn" style="cursor:pointer;">❤️ Curtir</span>
                        <span class="comment-btn" style="cursor:pointer;">💬 Comentar</span>
                        <span class="share-btn" style="cursor:pointer;">🔄 Compartilhar</span>
                    </div>
                    <div class="comments" style="margin-top:0.5rem;"></div>
                `;
                feed.prepend(post);
                postContent.value = '';
            };
            // Curtir, comentar, compartilhar, apagar
            feed.onclick = function(e) {
                if(e.target.classList.contains('like-btn')) {
                    e.target.textContent = e.target.textContent.includes('Curtido') ? '❤️ Curtir' : '❤️ Curtido';
                } else if(e.target.classList.contains('delete-post')) {
                    if(confirm('Apagar esta publicação?')) e.target.closest('.scrap').remove();
                } else if(e.target.classList.contains('comment-btn')) {
                    const commentsDiv = e.target.closest('.scrap').querySelector('.comments');
                    const comment = prompt('Digite seu comentário:');
                    if(comment) {
                        const div = document.createElement('div');
                        div.innerHTML = `<strong>Você:</strong> ${comment.replace(/</g,'&lt;')}`;
                        commentsDiv.appendChild(div);
                    }
                } else if(e.target.classList.contains('share-btn')) {
                    alert('Publicação compartilhada!');
                }
            };
        }
        // Editar nome
        const editName = document.getElementById('edit-name');
        if (editName) {
            editName.onchange = function() {
                document.querySelectorAll('strong').forEach(s => { if(s.textContent === 'Seu Nome') s.textContent = editName.value; });
            };
        }
        // Editar bio (já editável)
        // Seguir sugestões
        Array.from(document.getElementsByClassName('follow-btn')).forEach(btn => {
            btn.onclick = function() {
                btn.textContent = 'Seguindo';
                btn.style.background = '#888';
            };
        });
    }

    // Slide de anúncios
    function initSlideShow() {
        const slides = document.querySelectorAll('#anuncios-slide .slide');
        const prev = document.getElementById('slide-prev');
        const next = document.getElementById('slide-next');
        const dots = document.getElementById('slide-dots');
        let idx = 0;
        let timer;
        function showSlide(i) {
            slides.forEach((slide, j) => {
                slide.style.left = ((j-i)*100)+"%";
            });
            if(dots) {
                dots.innerHTML = '';
                slides.forEach((_,j)=>{
                    const dot = document.createElement('span');
                    dot.style.width = '10px';
                    dot.style.height = '10px';
                    dot.style.borderRadius = '50%';
                    dot.style.background = j===i?'#b71c1c':'#eee';
                    dot.style.display = 'inline-block';
                    dot.style.cursor = 'pointer';
                    dot.onclick = ()=>{ idx=j; showSlide(idx); resetTimer(); };
                    dots.appendChild(dot);
                });
            }
        }
        function resetTimer() {
            if(timer) clearInterval(timer);
            timer = setInterval(()=>{ idx=(idx+1)%slides.length; showSlide(idx); }, 5000);
        }
        if(prev && next) {
            prev.onclick = ()=>{ idx=(idx-1+slides.length)%slides.length; showSlide(idx); resetTimer(); };
            next.onclick = ()=>{ idx=(idx+1)%slides.length; showSlide(idx); resetTimer(); };
        }
        document.getElementById('anuncios-slide').onmouseenter = ()=>{ if(timer) clearInterval(timer); };
        document.getElementById('anuncios-slide').onmouseleave = ()=>{ resetTimer(); };
        showSlide(0);
        resetTimer();
    }
    // Inicialização: mostrar perfil completo ao carregar
    showSection('inicio');
    window.addEventListener('DOMContentLoaded', function() {
        setTimeout(initSlideShow, 100);
    });
    </script>
</body>
</html>
